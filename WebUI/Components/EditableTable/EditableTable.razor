    private string CreateColumnHeader(int index)
    {
        var columnHeader = "";
        var remaining = index;
        do
        {
            columnHeader += (char)('A' + (remaining) % 26);
            remaining -= 26;
        } 
        while (remaining >= 0);

        return columnHeader;
    }

