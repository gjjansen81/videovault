@using VideoVault.WebApi
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> L

<InputText type="date" id="Parameter.Name" class="form-control" @bind-Value="Property" placeholder="@L[Parameter.Placeholder]"></InputText>

@code {
    [Parameter] 
    public MappingNodeParameterDto Parameter{ get; set; }
    
    private string Property
    {
        get => Parameter.Value?.ToString(); 
        set => Parameter.Value = !string.IsNullOrWhiteSpace(value) && DateTime.TryParse(value, out var dateTime) ? dateTime : null;
    }
}