@using VideoVault.WebApi
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> L

@*
    <InputText id="@Parameter.Name" class="form-control" @bind-Value="@Parameter.Value" placeholder="@Parameter.Placeholder"></InputText>
*@
<InputText type="text" id="Parameter.Name" class="form-control" ValueChanged="@(OnValueChanged)" ValueExpression="@(() => Property)" placeholder="@L[Parameter.Placeholder]"></InputText>

@code {
    [Parameter] 
    public MappingNodeParameterDto Parameter{ get; set; }

    private string Property { get; set; }
    
    private Task OnValueChanged(string value)
    {
        Parameter.Value = value;
        return Task.CompletedTask;
    }
}
    